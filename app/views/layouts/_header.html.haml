%header.navbar.navbar-inverse
  .navbar-inner
    / This button will be appear in mobile version and triggering responsive navbar.
    =button_tag raw("<span class='icon-bar'></span><span class='icon-bar'></span><span class='icon-bar'></span>"), {type: '', class: 'btn btn-navbar', data: {toggle: 'collapse', target: 'nav-collapse'}} do
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    =link_to 'MotiFit', '/', class: 'brand'
    .nav-collapse.collapse
      %ul.nav
        %li=link_to 'Home', root_path
        %li=link_to 'Sign Up'
        %li=link_to 'Profile'
        %li=link_to 'Meetups'
        %li.dropdown
          =link_to raw("<b class='caret'></b> About"), "#", {class: 'dropdown-toggle', data: {toggle: 'dropdown'}}
          %ul.dropdown-menu
            %li=link_to 'Contact'
            %li=link_to 'The Team'

