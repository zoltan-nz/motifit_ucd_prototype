.menu-wrapper
  %header.navbar.navbar-inverse
    .navbar-inner
      / This button will be appear in mobile version and triggering responsive navbar.
      =button_tag '', {type: '', class: 'btn btn-navbar', data: {toggle: 'collapse', target: '.nav-collapse'}} do
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to 'MotiFit', '/', class: 'brand'
      .nav-collapse.collapse
        %ul.nav.pull-left
          %li=link_to 'Home', root_path
          %li=link_to 'Meetups', meetups_path
          %li.dropdown
            =link_to raw("<b class='caret'></b> About"), "#", {class: 'dropdown-toggle', data: {toggle: 'dropdown'}}
            %ul.dropdown-menu
              %li=link_to 'Contact', contact_path
              %li=link_to 'The Team', theteam_path
        .pull-right
          =link_to 'Sign Up', "#signup", class: 'btn btn-primary', data: {toggle: 'modal'}, role: 'button'

